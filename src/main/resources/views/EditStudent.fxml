<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml" fx:controller="com.student.management.controllers.EditStudentController">
    <children>
        <VBox spacing="10" alignment="center">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>
            <Label text="Edit Student Details" style="-fx-font-size: 20px;"/>
            <TextField fx:id="nameField" promptText="Name"/>
            <TextField fx:id="emailField" promptText="Email"/>
            <TextField fx:id="phoneField" promptText="Phone"/>
            <DatePicker fx:id="dobPicker" promptText="Date of Birth"/>
            <HBox spacing="10">
                <Button text="Save Changes" onAction="#handleSaveChanges"/>
                <Button text="Cancel" onAction="#handleCancel"/>
            </HBox>
            <Label fx:id="errorMessage" textFill="red" visible="false"/>
        </VBox>
    </children>
</AnchorPane>
