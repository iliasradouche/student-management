<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.student.management.controllers.LoginController">
    <children>
        <VBox alignment="CENTER" spacing="20" prefWidth="350" prefHeight="350"
              style="-fx-padding: 20; -fx-background-color: #ECEFF4; -fx-border-radius: 15px; -fx-border-color: #4C566A;">
            <Label text="🔐 Gestion des étudiants"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2E3440;"/>

            <TextField fx:id="usernameField" promptText="👤 Nom d'utilisateur" prefWidth="250"
                       style="-fx-background-color: #D8DEE9; -fx-padding: 5px;"/>
            <PasswordField fx:id="passwordField" promptText="🔑 Mot de passe" prefWidth="250"
                           style="-fx-background-color: #D8DEE9; -fx-padding: 5px;"/>

            <Button text="Se connecter" onAction="#handleLogin"
                    style="-fx-background-color: #A3BE8C; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>

            <Label fx:id="errorMessage" textFill="red" visible="false"/>
        </VBox>
    </children>
</AnchorPane>
